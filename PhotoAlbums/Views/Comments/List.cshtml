@model List<Comment>

<table class="styled-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        @{
            bool active = false;
            foreach (var comment in Model)
            {
                <tr class="@(active ? "active-row" : "")">
                    <td>@comment.name</td>
                    <td>@comment.email</td>
                    <td>@comment.body</td>
                </tr>
                active = active ? false : true;
            }
        }
        <!-- and so on... -->
    </tbody>
</table>